---
const { trend } = Astro.props;
---
<div class=`trend` id=`${trend}` onmouseenter=`showDialog(${trend})`>
    <div class="wr">
        <h1>{trend}</h1>
    </div>
</div>
<style>
    .trend {
        background-color: #000;
        height: 30vw;
        width: 40vw;
        color: #fff;
        flex: 0 0 auto;
    }

    h1 {
        position: relative;
        top: -1.5vw;
        left: 0.5vw;
        text-transform: uppercase;
        font-size: 5vw;
    }
    
    @media (max-width: 800px) {
        h1 {
            font-size: 7.5vw;
            top: -2vw;
            left: 1.2vw;
        }

        .trend {
            width: 85vw;
            height: 70vw;
        }
    }
</style>
