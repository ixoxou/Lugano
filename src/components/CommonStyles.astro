        font-display: swap;
        font-style: normal;
    }

    @font-face {
        font-family: 'Switzer-Bold';
        src: url('/fonts/Switzer-Bold.woff2') format('woff2'),
        url('/fonts/Switzer-Bold.woff') format('woff'),
        url('/fonts/Switzer-Bold.ttf') format('truetype');
